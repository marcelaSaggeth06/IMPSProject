<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Agregar profesor</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form method="POST">
                <div class="form-group mb-3">
                    <input type="text" class="form-control" name="nombre" placeholder="Nombre del profesor" autofocus />
                </div>
                <div class="form-group mb-3">
                    <input type="text" class="form-control" name="apellido" placeholder="Apellido del profesor" >
                </div>
            <div class="form-group mb-3">
    <label for="fecha_nacimiento" class="form-label">Fecha de nacimiento del profesor</label>
    <input type="date" class="form-control" id="fecha_nacimiento" name="fecha_nacimiento" required>
</div>

                <div class="form-group mb-3">
                    <input type="text" class="form-control" name="profesion" placeholder="Profesion del profesor" >
                </div>
                <div class="form-group mb-3">
                    <input type="text" class="form-control" name="genero" value="{{profesor.genero}}" maxlength="1" pattern="[MF]" title="Ingresa 'M' para Masculino o 'F' para Femenino" autofocus />
                </div>
                <div class="form-group mb-3">
                    <input type="email" class="form-control" name="email" placeholder="Correo del profesor" >
                </div>
                <div class="form-group mb-3">
                    <button class="btn btn-success btn-block">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>